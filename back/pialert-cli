    if [ $existing -eq 0 ]; then
      sqlite3 $PIA_DB_FILE "ALTER TABLE 'Satellites' ADD COLUMN 'sat_conf_scan_openwrt' BOOLEAN NOT NULL DEFAULT 0;"
    else
